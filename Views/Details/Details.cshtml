@model E_Commerce_Outdoorways.Entities.Product

<section class="py-5 container">
    <div class="row">
        <div class="col-md-6">

            <img src="/images/products/@Model.ProductIMG"
                 class="img-fluid rounded shadow"
                 style="max-height: 500px; object-fit: cover;" />
        </div>

        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p class="text-muted">@Model.Category.CategoryName</p>

            <p>@Model.ProductDesc</p>

            <h3 class="text-primary fw-bold">@Model.Price €</h3>

            <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex gap-3 align-items-center mt-4">

                <input type="hidden" name="id" value="@Model.ProductId" />

                <input type="number"
                       name="quantity"
                       value="1"
                       min="1"
                       max="@Model.ProductQty"
                       class="form-control"
                       style="width: 90px;" 
                       />

                <button type="submit" class="btn btn-primary">
                    Add to Cart
                </button>
            </form>

        </div>
    </div>
</section>
